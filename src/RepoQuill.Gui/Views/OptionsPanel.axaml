<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RepoQuill.Gui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="300"
             x:Class="RepoQuill.Gui.Views.OptionsPanel"
             x:DataType="vm:OptionsViewModel">

    <StackPanel Spacing="12" Margin="8">
        <TextBlock Text="Options"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,4"/>

        <CheckBox IsChecked="{Binding HonorGitIgnore}"
                  Content="Honor .gitignore"
                  ToolTip.Tip="Skip files matched by .gitignore rules"/>

        <CheckBox IsChecked="{Binding HideBinaries}"
                  Content="Hide binary files"
                  ToolTip.Tip="Hide binary files in the tree (they're excluded by default)"/>

        <CheckBox IsChecked="{Binding StripComments}"
                  Content="Strip comments"
                  ToolTip.Tip="Remove comments from source files"/>

        <CheckBox IsChecked="{Binding NormalizeWhitespace}"
                  Content="Normalize whitespace"
                  ToolTip.Tip="Normalize line endings and remove trailing whitespace"/>
    </StackPanel>
</UserControl>
